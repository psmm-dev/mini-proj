{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@ui/*": ["src/ui/*"]
    }
  },
  "include": ["src"]
}